<Page
    x:Class="MyoUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="tblUpdates" Text="Updates" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="10, 20, 0, 0" />
        <StackPanel Orientation="Horizontal" Margin="10,50, 0,0" HorizontalAlignment="Left" >
            <TextBlock x:ConnectionId='12' x:Name="tblXValue" Text="x: " Margin="5" Foreground="Red" FontSize="28"/>
            <TextBlock x:ConnectionId='13' x:Name="tblYValue" Text="x: " Margin="5" Foreground="Green" FontSize="28"/>
            <TextBlock x:ConnectionId='14' x:Name="tblZValue" Text="x: " Margin="5" Foreground="Blue" FontSize="28"/>
        </StackPanel>
        <Canvas x:ConnectionId='2' x:Name="cvsLines" Visibility="Collapsed"  >
            <Line x:ConnectionId='9' x:Name="pitchLine" X1="200" Y1="350" X2="200" Y2="350" Stroke="Red" StrokeThickness="4" />
            <Line x:ConnectionId='10' x:Name="yawLine" X1="200" Y1="350" X2="200" Y2="350" Stroke="Green" StrokeThickness="4" />
            <Line x:ConnectionId='11' x:Name="rollLine" X1="200" Y1="350" X2="200" Y2="350" Stroke="Blue" StrokeThickness="4" />
        </Canvas>

        <Canvas x:ConnectionId='3' x:Name="cvsRoller" Height="500" VerticalAlignment="Center" Background="Gray"  >
            <Rectangle x:ConnectionId='8' x:Name="eMyo" Height="40" Width="40" Fill="white" 
                     Canvas.Left="150" Canvas.Top="175" />
        </Canvas>
        
        <StackPanel Orientation="Horizontal" Margin="0,500, 0,0" HorizontalAlignment="Center" >
            <TextBlock x:ConnectionId='5' x:Name="tblXGyro" Text="x: " Margin="5" Foreground="Red" FontSize="28"/>
            <TextBlock x:ConnectionId='6' x:Name="tblYGyro" Text="x: " Margin="5" Foreground="Green" FontSize="28"/>
            <TextBlock x:ConnectionId='7' x:Name="tblZGyro" Text="x: " Margin="5" Foreground="Blue" FontSize="28"/>
        </StackPanel>

        <Button x:ConnectionId='4' x:Name="btnMyo" Content="Find Myo" HorizontalAlignment="Center" Margin="0, 0, 0, 25"
                VerticalAlignment="Bottom"                     />
    </Grid>
</Page>

