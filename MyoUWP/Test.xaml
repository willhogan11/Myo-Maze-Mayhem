            </StackPanel>
        </StackPanel>

        <Canvas HorizontalAlignment="Center" x:Name="cvsRoller" Height="550" Width="1000" VerticalAlignment="Center" Background="{StaticResource marsBrush}">

            <StackPanel x:Name="objectHolder" Height="550" Width="1000"></StackPanel>
            
