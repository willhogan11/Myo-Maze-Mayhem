<Page
    x:Class="MyoUWP.Scores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="Black">
        <TextBlock Text="Game Scores" HorizontalAlignment="Center" FontFamily="Century-Gothic" 
                   Foreground="White" FontSize="35" FontWeight="ExtraBold" Margin="0 30 0 0" />

        <TextBlock x:Name="scoresText" TextAlignment="DetectFromContent" FontSize="20" 
                   Foreground="White" Margin="0 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Page>
